<section>
    <div class="container">
        <div class="header">
            <div>
                <h1 class="title">{{blog.title}}</h1>
                <small>Author: {{blog.author}}</small>
            </div>
            <div class="options">
            <a href={{blog.deleteLink}} class="delete">
                Delete
            </a>
            <a href={{blog.updateLink}} class="update">
                Update
            </a>

            </div>
        </div>
        <p>
            {{blog.content}}
        </p>
        <small>Published at: {{blog.created}}</small>
    </div>
    <div style="margin-top: 20px">
        <a href="/blog">
        Return 
        </a>
    </div>
</section>
<style>
    section{
        padding: 3em;
        display: flex;   
        align-items: center;
        flex-direction: column;
    }
    .container{
        max-width: 500px;
        display: flex;
        flex-direction: column;

    }
    .title{
        padding: .4em 0;
    }

    small{
        color: gray
    }

    p{
        padding: 1em 0;
        line-height: 1.5em;
        font-size: 1.2em;
    }

    .header{
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .delete{
        color: red;
    }

    .update{
        color: orange;
    }

    .options{
        display: flex;
        flex-direction: column;
    }
